<Window x:Class="FitnesTracker.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnesTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.7*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding StepsProperty, Mode=Default}" Grid.Column="0"/>

        <Canvas Grid.Column="1" x:Name="graphGrid" Margin="5" SizeChanged="graphGrid_SizeChanged">
            <!--<Border Margin="5" BorderThickness="5" Background="#FFF0F0F0"/>-->
            
        </Canvas>
    </Grid>
    


</Window>
